{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Electron: Start and Debug",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:debug"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "restart": true,
      "protocol": "inspector"
    },
    {
      "name": "Debug Watcher.js (Test)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/test-watcher.js",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development",
        "TEST_USER_ID": "test-user-123",
        "TEST_TOKEN": "test-token-456",
        "TEST_PROPRIETARIO_ID": "test-proprietario-789",
        "TEST_TIMEOUT": "5000"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    },
    {
      "name": "Electron: Attach to Process",
      "type": "node",
      "request": "attach",
      "port": 5858,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/src",
      "remoteRoot": "${workspaceFolder}/src",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    }
  ]
}